<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallingActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        android:id="@+id/profile_image_calling"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_calling"
        android:text="Username"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:maxLines="5"
        android:layout_above="@+id/txt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:text="Calling..."
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:maxLines="5"
        android:layout_above="@+id/linear_lay_1"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_lay_1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/make_call"
            android:layout_marginRight="80dp"
            android:id="@+id/make_call"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/cancel_call"
            android:id="@+id/cancel_call"
            />
    </LinearLayout>



</RelativeLayout>